{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug BaldMonster",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/BaldMonster",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",   // Windows에선 gdb.exe 경로 확인 필요!
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}